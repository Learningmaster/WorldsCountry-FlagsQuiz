<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oceanName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/chooseOceanTextSize"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/countryToFlagPadding"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/zero"
        android:paddingStart="@dimen/zero"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:textColor="@color/cardview_dark_background"/>

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/pbar1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/oceanName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oceanNameProgressReport"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:paddingTop="@dimen/countryToFlagPadding"
        android:paddingBottom="@dimen/countryToFlagPadding"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/zero"
        android:paddingStart="@dimen/zero"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/white"
        android:layout_below="@id/oceanName"
        android:layout_alignTop="@id/pbar1"
        android:layout_alignBottom="@id/pbar1"
        android:layout_alignLeft="@id/pbar1"
        android:layout_alignRight="@id/pbar1"
        android:layout_alignEnd="@id/pbar1"
        android:layout_alignStart="@id/pbar1"
        android:textSize="18sp"
        android:background="@android:color/transparent"/>

</RelativeLayout>